"$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 800,
    "height": 400,
    "padding": 5,
  
    "data": [
      {
        "name": "table",
        "url": "https://api.resourcewatch.org/v1/download/c1a22e2e-6b78-4ccd-b249-77ab0bd58bdd?sql=SELECT date,average  from cli_045_carbon_dioxide_concentration&format=json",
        "transform":[{
            "type": "collect", 
            "sort":{"field": "total_ghg_emissions_co2e_per_million_kilocalories_consumed"}
            }]
    }
    ],
    
    "signals": [
        {
          "name": "tooltip",
          "value": {},
          "on": [
            {"events": "rect:mouseover", "update": "datum"},
            {"events": "rect:mouseout",  "update": "{}"}
          ]
        }
      ],
     
    "scales": [
      {
        "name": "xscale",
        "type": "linear",
        "domain": {"data": "table", "field": "date"},
      },
      {
        "name": "yscale",
        "domain": {"data": "table", "field": "average"},
        "nice": true,
        "range": "height"
      }
    ],
  
    "axes": [
      { "orient": "bottom", "scale": "xscale", "labels":true, "labelAngle": -45, "labelAlign":"right","labelBaseline":"middle", "title":"Date"},
      { "orient": "left", "scale": "yscale", "title":"CO2 ppm"}
    ],
  
    "marks": [
      {
        "type": "rect",
        "from": {"data":"table"},
        "encode": {
          "enter": {
            "x": {"scale": "xscale", "field": "Date"},
            "width": {"scale": "xscale", "band": 1},
            "y": {"scale": "yscale", "field": "CO2 ppm"},
            "y2": {"scale": "yscale", "value": 0}
          },
          "update": {
            "fill": {"value": "steelblue"}
          },
          "hover": {
            "fill": {"value": "red"}
          }
        }
      },
      {
        "type": "text",
        "encode": {
          "enter": {
            "align": {"value": "center"},
            "baseline": {"value": "bottom"},
            "fill": {"value": "#333"}
          },
          "update": {
            "x": {"scale": "xscale", "signal": "tooltip.food_type", "band": 0.5},
            "y": {"scale": "yscale", "signal": "tooltip.total_ghg_emissions_co2e_per_million_kilocalories_consumed", "offset": -2},
            "text": {"signal": "tooltip.total_ghg_emissions_co2e_per_million_kilocalories_consumed"},
            "fillOpacity": [
              {"test": "isNaN(tooltip.total_ghg_emissions_co2e_per_million_kilocalories_consumed)", "value": 0},
              {"value": 1}
            ]
          }
        }
      }
    ]
  }